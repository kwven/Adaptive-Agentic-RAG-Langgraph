# =========================
# 1) Environment
# =========================
APP_ENV=dev
LOG_LEVEL=INFO

# =========================
# 2) Mistral AI (LLM)
# =========================
# Required for Mistral API access
MISTRAL_API_KEY=

# Default chat model
MISTRAL_CHAT_MODEL=mistral-small-latest

# Optional:  Mistral embeddings
MISTRAL_EMBED_MODEL=mistral-embed

# =========================
# 3) Paths (local project)
# =========================
DATA_DIR=./data
VECTORSTORE_DIR=./data/vectorstore

# =========================
# 4) RAG runtime knobs
# =========================
TOP_K=4
MAX_LOOPS=3

# =========================
# 5) Observability 
# =========================
# LangSmith . Leave empty if you don't use it.
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=
LANGSMITH_ENDPOINT=
LANGSMITH_PROJECT=langgraph-agentic-rag

# Alternative LangChain tracing env vars
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=langgraph-agentic-rag

# =========================
# 6) Web search 
# =========================
# Tavily for web search:
TAVILY_API_KEY=
